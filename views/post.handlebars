<div>
  <div class="row mb-4 post" data-id={{id}}>
  <div class="text-center col-md-12 post-container">
    <div class="row post-title-container">
    <div class="col-md-6">
    <h2 class="post-title">
      {{title}}
    </h2>
    </div>
    <div class="col-md-6 author-container">
    <h5 class="author">Created by {{user.name}} on {{format_date date_created}}</h5>
      </div>
    </div>
    <div class="post-text-container">
      <p class="post-text">{{post_text}}</p>
    </div>
  </div>
</div>
{{#if (is_equal user.id user_id)}}
<div class="col-md-4 btn-container">
    <button class="btn btn-sm btn-danger edit-btn" data-id={{id}}>Edit Post</button>
    <button class="btn btn-sm btn-danger del-btn" data-id={{id}}>Delete Post</button>
    <button class="btn btn-sm btn-danger save-btn" id="save-btn" data-id={{ id }}>Save</button>
</div>
{{/if}}
<div class="comments-container">
  {{#each comments as |comment|}}
    <div class="comment-container">
      <div class="comment-header"></div>
      <p class="comment-text">{{comment.comment_text}}</p>
      <p class="comment-author">- {{comment.user.name}}, {{format_date comment.date_created}}</p>
    </div>
  {{/each}}

  <div class="col-md-12 new-comment-container">
    <div class="comment-header"></div>
    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-desc">New Comment:</label>
        <textarea type="submit" class="form-input" id="new-comment" name="new-comment"></textarea>
      </div>
      <div class="form-group">
      <button type="submit" class="btn btn-primary create-btn" data-id={{id}}>
          Create
        </button>
      </div>
    </form>
  </div>

</div>
</div>
<p class="comment-btn">
    {{!-- <a id="comment-btn"> --}}
      <button class="btn btn-primary" id="comment-btn" type="button">Add Comment</button>
      {{!-- </a> --}}
</p>

<script src="/js/post.js"></script>